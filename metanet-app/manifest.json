{
  "id": "com.bitcoincorp.writer",
  "name": "Bitcoin Writer",
  "version": "2.0.0",
  "description": "Professional writing and publishing platform for the Bitcoin blockchain",
  "author": "The Bitcoin Corporation LTD",
  "homepage": "https://www.bitcoin-writer.com",
  "repository": "https://github.com/bitcoin-corp/bitcoin-writer",
  "license": "AGPL-3.0",
  "main": "index.js",
  "type": "desktop",
  "category": "Productivity",
  "icon": "./icon.png",
  "permissions": [
    "wallet:read",
    "wallet:write",
    "kvstore:read",
    "kvstore:write",
    "network:fetch",
    "storage:local"
  ],
  "requirements": {
    "node": ">=16.0.0",
    "metanet": ">=1.0.0"
  },
  "endpoints": {
    "api": "/api",
    "health": "/api/health"
  },
  "bapp": {
    "format": "1.0",
    "runtime": "node",
    "entry": "index.js",
    "port": 3321
  }
}
